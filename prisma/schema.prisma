generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definindo os tipos permitidos
enum PropertyType {
  HOUSE
  APARTMENT
  LAND
}

model Property {
  id           String   @id @default(uuid())
  title        String
  price        Float
  neighborhood String
  city         String   @default("Joinville")
  area         Float
  bedrooms     Int
  type         String   @default("HOUSE")
  imageUrls    String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}