generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definindo os tipos permitidos
enum PropertyType {
  HOUSE
  APARTMENT
  LAND
}

model Property {
  id           String       @id @default(cuid())
  title        String
  type         PropertyType @default(APARTMENT) // Agora usa o Enum
  price        Float
  city         String
  neighborhood String
  bedrooms     Int
  area         Float
  imageUrl     String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}